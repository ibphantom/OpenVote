<?xml version="1.0"?>
<Container version="2">
  <Name>OpenVote</Name>
  <Repository>ibphantom/openvote</Repository>
  <Registry>https://hub.docker.com/r/ibphantom/openvote</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/ibphantom/OpenVote/issues</Support>
  <Project>https://github.com/ibphantom/OpenVote</Project>
  <Overview>A containerized voting application</Overview>
  <Category>Tools:</Category>
  <WebUI>http://[IP]:[PORT:80]/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/ibphantom/OpenVote/main/icon.png</Icon>
  <Config Name="Web Port" Target="80" Default="80" Mode="tcp" Description="Web UI Port" Type="Port" Display="always" Required="true" Mask="false">80</Config>
  <Config Name="Config" Target="/config" Default="/mnt/user/appdata/openvote" Mode="rw" Description="Configuration files" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/openvote</Config>
</Container>
